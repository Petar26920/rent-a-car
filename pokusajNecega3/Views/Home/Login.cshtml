@model pokusajNecega3.Models.BusinesObject.KorisniciBO
@{
    ViewData["Title"] = "Login";

}
<h1>Dobrodošli</h1>
<h2>@Model.KorisnickoIme</h2>

@if(String.IsNullOrEmpty(Model.Uloga) == true)
{
    <h2>Morate da se ulogujete prvo: </h2>
    @Html.ActionLink("Nazad", "Index", "Home");
}

@if (Model.Uloga == "admin")
{
    @Html.ActionLink("Pretraga i brisanje vozila", "NadjiVoziloPoReg", "Vozilo")<br/>
    @Html.ActionLink("Unos novog vozila", "Dodaj", "Vozilo")<br />
    @Html.ActionLink("Ažuriranje podataka vozila", "Azuriraj", "Vozilo")<br />

}

@if (Model.Uloga == "korisnik")
{
    @Html.ActionLink("Provera vozila na raspolaganju", "Index", "Vozilo")<br />
    @Html.ActionLink("Pretraga vozila", "NadjiVoziloPoRegRadnik", "Vozilo")<br />
    @Html.ActionLink("Kreiranje računa", "Dodaj", "Racun")<br />
    @Html.ActionLink("Storniranje računa", "Index", "Racun")<br />
    @Html.ActionLink("Kreiranje dokumentacije", "Index", "Dokumentacija")<br />

}