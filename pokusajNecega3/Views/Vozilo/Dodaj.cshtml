@model pokusajNecega3.Models.BusinesObject.VoziloBO
@{
    ViewData["Title"] = "Dodaj";
}

<h1>Dodajte novo vozilo</h1>

<div class="container">
    <div class="col-md-5">

        <form asp-action="DodajVozilo">

            @*REGISTRACIONI BROJ*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegistracioniBroj" class="control-label">Unesite ID računa:</label>
                <input asp-for="RegistracioniBroj" class="form-control" />
                <span asp-validation-for="RegistracioniBroj" class="text-danger"></span>
            </div>

            @*TIP VOZILA*@
            <div class="form-group">
                <label asp-for="Tip" class="control-label">Izaberite tip:</label>
                <select class="form-control" asp-for="Tip"
                        asp-items="@(new SelectList(ViewBag.Tip))">
                    <option disabled selected>Izaberite jedno</option>
                </select>
                <span asp-validation-for="Tip" class="text-danger"></span>
            </div>

            @*MODEL*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Model" class="control-label">Unesite model:</label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            @*BOJA*@
            <div class="form-group">
                <label asp-for="Boja" class="control-label">Boja:</label>
                <input asp-for="Boja" type="text" class="form-control" />
                <span asp-validation-for="Boja" class="text-danger"></span>
            </div>
            
            @*TEZINA*@
            <div class="form-group">
                <label asp-for="Tezina" class="control-label">Težina:</label>
                <input asp-for="Tezina" type="number" class="form-control" />
                <span asp-validation-for="Tezina" class="text-danger"></span>
            </div>
            @*VOZNI PARK*@
            <div class="form-group">
                <label asp-for="vozniPark" class="control-label">Vozni park:</label>
                <input asp-for="vozniPark" type="number" min="0" max="1" class="form-control" />
                <span asp-validation-for="vozniPark" class="text-danger"></span>
            </div>

            <input type="submit" value="Dodaj vozilo" class="btn btn-success" name="nSub" id="iSub" />
        </form>

    </div>

</div>
